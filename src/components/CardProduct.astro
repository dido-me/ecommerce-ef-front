---
interface Props {
    id: string | null | undefined;
    handle: string | null | undefined;
    img: string | null | undefined;
    title: string | undefined;
    price: number;
}

const { id, handle, img, title, price } = Astro.props as Props

const formattedPrice = new Intl.NumberFormat('en-US', {
  style: 'currency',
  currency: 'USD'
}).format(price / 100);
---

<div
    class="bg-white shadow-md rounded-lg max-w-xs flex flex-col hover:scale-105"
>
    <a
        href={`/product/${id}/${handle}`}
        class="h-[75%] grid place-items-center"
    >
        <img
            src={img}
            alt={`Producto de efystemas - ${title}`}
            class="w-[20rem] rounded-t-lg p-8 object-center object-cover"
            transition:name={id!}
        />
    </a>
    <div class="px-5 pb-5" class="h-[25%]">
        <a href={`/product/${id}/${handle}`}>
            <h3 class="text-gray-900 font-semibold text-xl tracking-tight">
                {title}
            </h3>
        </a>

        <div class="flex justify-center my-4">
            <span class="text-2xl font-bold text-gray-900"
                >{formattedPrice}</span
            >
        </div>
    </div>
</div>
